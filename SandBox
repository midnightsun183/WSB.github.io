<script>



function randomString() {
    var chars = "ABCDEFGHIJKLMNOPQRSTUVWXTZ";
    var string_length = 3;
    var randomstring = '';
    var clicks = 0;
  
    for (var i=0; i<string_length; i++) {
        var rnum = Math.floor(Math.random() * chars.length);
        randomstring += chars.substring(rnum,rnum+1);        
    }
    clicks += 1;
    
    
 // Outputs number of clicks 
 //document.getElementById("clicks").innerHTML = clicks;
    
    
 // document.randform.randomfield.value ="Buy some " + "$" + randomstring + " Faggies D's";
		document.getElementById('demo').innerHTML ="Buy some " + "$" + randomstring + " Faggies D's" + " clicks: " + clicks ;

    
}
</script> 

</button>
